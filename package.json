{
  "name": "covas-next",
  "version": "0.0.0",
  "description": "[Getting Started](https://ratherrude.github.io/Elite-Dangerous-AI-Integration/) | [Join our Discord](https://discord.gg/9c58jxVuAT) | [Download latest version](https://github.com/RatherRude/Elite-Dangerous-AI-Integration/releases)",
  "homepage": "https://github.com/RatherRude/Elite-Dangerous-AI-Integration#readme",
  "bugs": {
    "url": "https://github.com/RatherRude/Elite-Dangerous-AI-Integration/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RatherRude/Elite-Dangerous-AI-Integration.git"
  },
  "license": "ISC",
  "author": "ratherrude",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:py && npm run install:electron && npm run install:ui",
    "install:py": "pip install -r requirements.txt",
    "install:electron": "npm install",
    "install:ui": "cd ui && npm install",
    "start": "cross-env NODE_ENV=development concurrently --kill-others \"cd ui && npx ng serve\" \"cd electron && wait-on http://localhost:1420/ && npx electron ./index.js\"",
    "build": "npm run build:ui && npm run build:py",
    "build:ui": "cd ui && npx ng build --configuration production",
    "build:py": "run-script-os",
    "build:py:win32": "powershell ./e2e/build.ps1",
    "build:py:linux": "./e2e/build.sh",
    "package": "run-script-os",
    "package:win32": "npm run package:dir && npm run package:msi",
    "package:linux": "npm run package:dir && npm run package:flatpak",
    "package:dir": "electron-builder --dir",
    "package:msi": "electron-builder --win msi",
    "package:flatpak": "flatpak-builder --force-clean --install-deps-from=flathub --repo=.flatpak-repo --force-clean .flatpak-build  com.covasnext.ui.yml && flatpak build-bundle .flatpak-repo covas-next-ui-development.flatpak com.covasnext.ui --runtime-repo=https://flathub.org/repo/flathub.flatpakrepo",
    "package:run": "run-script-os",
    "package:run:win32": "cd dist/win-unpacked/ && start covas-next-ui.exe",
    "package:run:linux": "cd dist/linux-unpacked/ && ./covas-next"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^38.0.0-alpha.10",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "productName": "COVAS NEXT",
    "appId": "com.covasnext.ui",
    "directories": {
      "buildResources": "electron"
    },
    "extraResources": [
      {
        "from": "dist/Chat",
        "to": "Chat"
      }
    ],
    "files": [
      {
        "from": "electron",
        "to": "."
      },
      {
        "from": "ui/dist/covas-next-ui/browser",
        "to": "ui"
      }
    ]
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "electron-context-menu": "^4.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "run-script-os": "^1.1.6",
    "wait-on": "^8.0.4"
  }
}
